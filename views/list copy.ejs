<%- include('header'); -%>

<body>
  <div id="heading">
    <h1><%=day%></h1>
  </div>

  <div class="container">
    
    items.forEach((item) => {
        document.write(`
          <form action="/delete" method="post">
            <div class="item">
              <input
                type="checkbox"
                name="checkbox"
                value="${item._id}"
                onChange="this.form.submit()"
              />
              <p>${item.name}</p>
            </div>
          </form>
        `);
      });      

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="Add Task Here" />
      <button type="submit" name="submit">+</button>
    </form>
  </div>

  <%- include('footer'); -%>
</body>
